<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:background="@drawable/touch_feedback">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical">
        <TextView android:id="@+id/start"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:layout_marginRight="4dp"
                  android:textColor="@color/timeText"
                  android:background="@drawable/rounded_corner_start"
                  tools:text="@tools:sample/date/hhmm"/>
        <TextView android:id="@+id/finish"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="4dp"
                  android:paddingRight="4dp"
                  android:layout_marginLeft="4dp"
                  android:layout_marginRight="4dp"
                  android:textColor="@color/timeText"
                  android:background="@drawable/rounded_corner_finish"
                  tools:text="@tools:sample/date/hhmm"/>
    </LinearLayout>
    <TextView android:id="@+id/note"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:layout_gravity="center_vertical"
              tools:text="@tools:sample/lorem"
              android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
</LinearLayout>